<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="participant"
            type="com.obppamanse.honsulnamnye.post.model.Participant" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/default_margin"
        android:paddingLeft="@dimen/default_margin_half"
        android:paddingRight="@dimen/default_margin_half"
        android:paddingTop="@dimen/default_margin">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="@dimen/default_margin"
            bind:setProfileImage="@{participant.profileUrl}" />

        <TextView
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@{participant.userName}" />

    </LinearLayout>
</layout>

